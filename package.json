{
  "name": "zencraft-vue",
  "version": "1.0.0",
  "description": "A data-driven no-code layout builder for Vue.js",
  "productName": "Zencraft",
  "author": "adaminthecape",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.ts,.vue ./",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"No test specified\" && exit 0",
    "dev": "quasar dev",
    "build": "quasar build",
    "watch": "tsc src/index.ts --watch --outDir ./lib",
    "update": "cd ../zencraft-core && npm run build && cd ../vue-items && npm update zencraft-core",
    "importTours": "tsx src/scripts/importItems typeId:Tour import:tours",
    "importHotels": "tsx src/scripts/importItems typeId:Hotel import:hotels",
    "importBookings": "tsx src/scripts/importItems typeId:Booking import:bookings",
    "importAll": "npm run importTours && npm run importHotels && npm run importBookings",
    "exportAll": "tsx src/scripts/exportItems itemTypes:all"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.21.3",
    "@firebase/app": "^0.10.15",
    "@firebase/auth": "^1.8.0",
    "@firebase/database": "^1.0.9",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@quasar/extras": "^1.0.0",
    "@quasar/quasar-ui-qmarkdown": "^1.4.4",
    "@types/electron-json-storage": "^4.5.4",
    "@types/graceful-fs": "^4.1.9",
    "@vueuse/core": "^10.9.0",
    "zencraft-core": "file:../zencraft-core",
    "axios": "^1.2.1",
    "deepmerge": "^4.3.1",
    "dexie": "^4.0.11",
    "dotenv": "^16.4.5",
    "electron-json-storage": "^4.6.0",
    "handlebars": "^4.7.8",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "pinia": "^2.1.4",
    "quasar": "^2.6.0",
    "tinycolor2": "^1.6.0",
    "uuid": "^9.0.0",
    "vue": "^3.5.13",
    "vue-i18n": "^11.0.1",
    "vue-router": "^4.0.13",
    "vuedraggable": "^2.24.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@eslint/js": "^9.20.0",
    "@quasar/app-vite": "^1.11.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "autoprefixer": "^10.4.2",
    "babel-eslint": "^10.1.0",
    "electron": "^24.6.1",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.15.0",
    "jest-environment-jsdom": "^27.0.6",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.24.1",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "engines": {
    "node": "^20 || ^18 || ^16 || ^14.19",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
